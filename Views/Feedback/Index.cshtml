@model lanzhoubeefNoodefs.Models.Feedback
@{
    ViewData["Title"] = "Index";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!--传入数据1.4先添加引用 项目名+Models+Feedback-->
<h1>评价</h1>
<form asp-action="Index" method="post" class="form-horizontal" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="name" class="col-md-2 control-label">姓名</label>
        <div class="col-md-5">
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="emall" class="col-md-2 control-label">Email</label>
        <div class="col-md-5">
            <input asp-for="emall" class="form-control" />
            <span asp-validation-for="emall" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="message" class="col-md-2 control-label">反馈意见</label>
        <div class="col-md-5">
            <textarea asp-for="message" class="form-control"></textarea>
            <span asp-validation-for="message" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="提交意见" />
        </div>
    </div>

</form>
